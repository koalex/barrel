html
   head
      meta(charset="utf-8")
      link(rel="shortcut icon", href="favicon.ico", type="image/x-icon")
      link(rel="stylesheet", href="/css/reset.css", media='all')
      style
         | html { overflow: hidden; }
         | body { padding: 1px; background-color: #333; box-shadow: inset 0 0 100px rgba(0,0,0,.5); }
         | h1 { margin-top: 40px; color: #fff; font-size: 48px; text-align: center; }
         | p { margin-top: 40px; color: #fff; font-size: 28px; text-align: center; }

   body
      h1 #{status}
      p #{message}